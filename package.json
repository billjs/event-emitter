{
  "name": "event-emitter",
  "version": "1.0.0",
  "description": "A simple and lightweight EventEmitter by TypeScript for Node.js or Browsers.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepublish": "npm run lint & npm run build",
    "start": "tsc -w",
    "build": "tsc",
    "eslint": "eslint --ext .js ./ --cache --quiet",
    "tslint": "tslint -p ./tsconfig.json --type-check",
    "lint": "npm run prettier && npm run tslint && npm run eslint",
    "prettier": "prettier --list-different \"**/*.{ts,json,md}\"",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billjs/event-emitter.git"
  },
  "keywords": [
    "EventEmitter",
    "simple",
    "lightweight",
    "TypeScript",
    "Node.js",
    "Browsers"
  ],
  "author": "billjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/billjs/event-emitter/issues"
  },
  "homepage": "https://github.com/billjs/event-emitter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  }
}
